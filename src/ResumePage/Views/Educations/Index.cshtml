@model IEnumerable<ResumePage.Models.Education>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<div class="pull-right">
    <p>
        <a class="btn btn-default" asp-action="Create">Create New</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Establishment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Graduated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Establishment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Graduated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
