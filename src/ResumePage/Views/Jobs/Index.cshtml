@model IEnumerable<ResumePage.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h2>Previous Work Experience</h2>
<div class="row">
    <div class="pull-right">
        <p>
            <a class="btn btn-default" asp-action="Create">Create New</a>
        </p>
    </div>
    <form asp-controller="Jobs" asp-action="Index" method="get">
        <div class="input-group">
            <div class="input-group-btn">
                <input type="text" class="form-control" name="searchString" placeholder="Search" value="@ViewData["CurrentFilter"]">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>

